            android:textColor="#438a67"
            android:text="Hari ke diet" />

    </FrameLayout>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/navbare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentLayout"
        app:layout_constraintVertical_bias="1.0"
        app:mbn_backgroundBottomColor="@color/hijauUtama"
        app:mbn_defaultIconColor="#fff"
        app:mbn_circleColor="@color/coklatMuda"
        app:mbn_selectedIconColor="#fff">
    </com.etebarian.meowbottomnavigation.MeowBottomNavigation>

</androidx.constraintlayout.widget.ConstraintLayout>